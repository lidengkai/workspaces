{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "rules": {
    "quotes": [
      2,
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "eol-last": 1,
    "indent": [
      1,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-debugger": 2,
    "no-var": 1,
    "no-alert": 2,
    "no-delete-var": 2,
    "no-extra-semi": 1,
    "no-irregular-whitespace": 2,
    "no-spaced-func": 1,
    "no-trailing-spaces": 1,
    "jsx-quotes": [
      2,
      "prefer-double"
    ],
    "react/jsx-boolean-value": 1,
    "react/jsx-closing-bracket-location": 1,
    "react/jsx-curly-spacing": 1,
    "react/jsx-equals-spacing": 1
  }
}